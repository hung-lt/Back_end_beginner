@model LuuTheHung.Models.BaiViet;
@{
    ViewData["Title"] = "Create";
}

<div class="container col-md-6">
    <h3>Them moi bai viet</h3>
    <form action="create" method="post">
        <div class="mt-3">
            <label>Ma bai viet</label>
            <input type="number" name="mabaiviet" class="form-control"/>
        </div>
        <div class="mt-3">
            <label>Tieu de</label>
            <input type="text" name="tieude" class="form-control"/>
        </div>
        <div class="mt-3">
            <label>Noi dung</label>
            <input type="text" name="noidung" class="form-control"/>
        </div>
        <div class="mt-3">
            <label>Ngay dang</label>
            <input type="datetime" name="ngaydang" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger">Them moi</button>
    </form>
</div>
