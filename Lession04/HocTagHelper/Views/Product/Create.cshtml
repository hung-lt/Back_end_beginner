        <div class="mt-3">
            <label asp-for="IdPro">Mã sản phẩm</label>
            <input type="number" asp-for="IdPro" class="form-control" />
        </div>
        <div class="mt-3">
            <label asp-for="Proname">Tên sản phẩm</label>
            <input type="text" asp-for="Proname" class="form-control" />
        </div>
        <div class="mt-3">
            <label asp-for="Price">Giá</label>
            <input type="text" asp-for="Price" class="form-control" />
        </div>
        <button type="submit" class="btn btn-outline-danger mt-3">Thêm mới</button>
    </form>
</div>