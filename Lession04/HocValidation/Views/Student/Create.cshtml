@model HocValidation.Models.Student
@{
    ViewData["Title"] = "Create";
}

<div class="container col-md-8">
    <h3>Them moi sinh vien</h3>
    <form action="/Student/Create" method="post">
        <div class="mt-3">
            <label asp-for="FullName">Ho ten</label>
            <input type="text" asp-for="FullName" class="form-control"/>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mt-3">
            <label asp-for="Age">Tuoi</label>
            <input type="text" asp-for="Age" class="form-control"/>
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger mt-3">Them moi</button>
    </form>
</div>
